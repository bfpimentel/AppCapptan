            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fruno@fruno.com.br"
            android:textSize="16sp"
